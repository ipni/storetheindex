locals {

  environment_name = "prod"
  region           = data.aws_region.current.name

  iam_path = "/${local.environment_name}/${local.region}/"

  # Base64 encoded GPG public key used to encrypt the password and secret access key of IAM users 
  # created for common use, such as pl-grafana and github_mgmt.
  # The private key is stored at `storetheidnex` 1Password vault.
  pgp_key = ""
  
  tags = {
    "Environment" = local.environment_name
    "ManagedBy"   = "terraform"
    Owner         = "storetheindex"
    Team          = "bedrock"
    Organization  = "EngRes"
  }
}

data "aws_region" "current" {}
